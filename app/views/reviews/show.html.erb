<div class="row">
  <div class="col-lg-12">
    <h1>口コミ詳細</h1>
    <dl>
      <dt>名前</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @shop.name%></dd>
      <dt>タイトル</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @review.title %></dd>
      <dt>詳細</dt>
      <dd style="margin:0px 0px 10px 20px"><%= simple_format(@review.description) %></dd>
      <dt>レビュー</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @review.evaluation %></dd>
      <dt>画像</dt>
      <dd style="margin:0px 0px 10px 20px"><%= image_tag @shop.image %></dd>
    </dl>
    <%= link_to '戻る', top_shops_path, class: "btn btn-default" %>

    <% if @review.user_id == current_user.id %>
      <%= link_to '編集', edit_shop_review_path(@shop, @review), class: "btn btn-default" %>
    <% end %>
  </div>
</div>
