<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>口コミ投稿</h2>

    <%= form_with model: [@shop, @review], local: true do |form| %>
      <div class="form-group">
        <%= form.label :title, "タイトル" %><br />
        <%= form.text_field :title, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description, "詳細" %><br />
        <%= form.text_area :description, class: "form-control" %>
      </div>

      <div class="field" id="star">
        <%= form.label :evaluation %>
        <%= form.hidden_field :evaluation, id: :evaluation_star %>
      </div>

      <div class="form-group">
        <%= form.label :image %><br>
        <%= image_tag @review.image if @review.persisted? %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

      <%= form.hidden_field :shop_id, value: @review.shop_id %>

      <div class="form-group">
        <%= form.submit "投稿する！", class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>

<script>
$('#star').raty({
  size     : 36,
  starOff:  '<%= asset_path('star-off.png') %>',
  starOn : '<%= asset_path('star-on.png') %>',
  scoreName: 'review[evaluation]'
});
</script>
