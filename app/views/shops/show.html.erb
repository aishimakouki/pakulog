<div class="row">
  <div class="col-lg-12">
    <h1>レストラン詳細</h1>
    <dl>
      <dt>店名</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @shop.name %></dd>
      <dt>詳細</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @shop.description %></dd>
      <dt>画像</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @shop.image %></dd>
      <dt>予算</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @shop.xxx %></dd>
      <dt>ジャンル</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @shop.genre_id %></dd>
      <dt>エリア</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @shop.area_id%></dd>
      <dt>ユーザー</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @shop.user_id %></dd>
      <dt>レビュー</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @shop.review_id %></dd>
    </dl>
    <%= link_to '編集', edit_customer_path(@customer), class: "btn btn-default" %>
    <%= link_to '戻る', customers_path, class: "btn btn-default" %>
  </div>
</div>
