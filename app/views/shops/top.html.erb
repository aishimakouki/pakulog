<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= search_form_for @q do |f| %>
      <div class="input-group">
        <%= f.search_field :name_or_description_cont, class: "form-control", placeholder: "キーワード[例 焼き肉、店名]" %>
        <span class="input-group-btn">
          <%= f.submit "検索", class: "btn btn-primary" %>
        </span>
      </div>
    <% end %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2>レストランを探す</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="row m-lr-20">
      <div class="col-md-3">
        <%= image_tag '/images/iwate.jpg', class: "img-responsive" %>
      </div>
      <div class="col-md-3">
        <%= image_tag '/images/tokyo.jpg', class: "img-responsive" %>
      </div>
      <div class="col-md-3">
        <%= image_tag '/images/osaka.jpg', class: "img-responsive" %>
      </div>
      <div class="col-md-3">
        <%= image_tag '/images/hiroshima.jpg', class: "img-responsive" %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2>新着口コミ</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% @reviews.each do |review| %>
      <hr>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">

          <!-- reviewに紐づくuser 画像 -->
          <% if review.user.image.present? %>
            <%= image_tag review.user.image, class: "user_icon" %>
          <% else %>
            <%= image_tag "default_user.png", class: "user_icon" %>
          <% end %>
          <!-- reviewsに紐づくuserの名前 -->
          <%= review.user.nick_name %>
          <!-- reviewsのtitle -->
          <%= link_to review.title, shop_review_path(review.shop, review) %>
          <!-- reviewsのdescription -->
          <%= truncate(review.description, length: 50) %>
          <%= link_to "もっと見る", shop_review_path(review.shop, review), class: "btn btn-warning"%>
          <!-- reviewsのimage -->
          <%= image_tag review.image, class: "img-responsive img-thumbnail" %>
          <!-- reviewsのevaluation -->
          <%= evaluation_star(review.evaluation) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
